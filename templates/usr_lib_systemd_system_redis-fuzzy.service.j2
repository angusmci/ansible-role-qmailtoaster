[Unit]
Description=Redis persistent key-value database for rspamd - fuzzy
After=network.target

[Service]
ExecStart=/usr/bin/redis-server /etc/redis-fuzzy.conf --supervised systemd
ExecStop=/usr/libexec/redis-shutdown redis-fuzzy
Type=notify
User=redis
Group=redis
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
