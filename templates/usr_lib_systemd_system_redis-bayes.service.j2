[Unit]
Description=Redis persistent key-value database for rspamd - bayes
After=network.target

[Service]
ExecStart=/usr/bin/redis-server /etc/redis-bayes.conf --supervised systemd
ExecStop=/usr/libexec/redis-shutdown redis-bayes
Type=notify
User=redis
Group=redis
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
